<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/detail_toolbar"
    />

    <ScrollView
        android:id="@+id/scrollview_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_toolbar"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
               <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/tweet_detail_profile_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/theme"
                   />

                <TextView
                    android:id="@+id/tweet_detail_screenname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/tweet_detail_profile_image"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="30dp"
                    android:text="MEI"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tweet_detail_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tweet_detail_screenname"
                    app:layout_constraintLeft_toRightOf="@id/tweet_detail_profile_image"
                    android:text="lenhat"
                    />

                <TextView
                    android:id="@+id/tweet_detail_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tweet_detail_profile_image"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="16sp"
                    android:text="heyo"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/tweet_detail_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:layout_constraintTop_toBottomOf="@id/tweet_detail_status"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="6dp"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/tweet_detail_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tweet_detail_create_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tweet_detail_card_view"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:text="date"

                    />
                <LinearLayout
                    android:id="@+id/ln_tweet_detail_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tweet_detail_create_date"
                    android:background="@drawable/custom_below_line"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    >
                    <TextView
                        android:id="@+id/txt_detail_retweet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17 tweet lại"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/txt_tweet_detail_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="750 Lượt Thích"
                        android:layout_marginLeft="20dp"
                        />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_feature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ln_tweet_detail_information"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/custom_below_line"
                >
                <ToggleButton
                    android:id="@+id/btn_tweet_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:drawableStart="@drawable/speech_bubble"
                    android:background="#fffeff"
                    android:outlineSpotShadowColor="#fffeff"
                    />

                <ToggleButton
                    android:id="@+id/btn_tweet_retweet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/btn_tweet_comment"
                    app:layout_constraintTop_toBottomOf="@id/tweet_card_view"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="#fffeff"
                    android:outlineSpotShadowColor="#fffeff"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textOn=""
                    android:textOff=""
                    android:drawableStart="@drawable/retweet"
                    />

                <CheckBox
                    android:id="@+id/detail_btn_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tweet_card_view"
                    app:layout_constraintLeft_toRightOf="@id/btn_tweet_retweet"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:outlineSpotShadowColor="#fffeff"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:button="@android:color/transparent"
                    android:drawableStart="@drawable/custom_toggle_heart"
                    android:checked="false"
                    />

                <ImageView
                    android:id="@+id/btn_tweet_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tweet_card_view"
                    app:layout_constraintLeft_toRightOf="@id/btn_like"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="35dp"
                    android:src="@drawable/share"
                    />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/ln_feature"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/white"
        >
            <EditText
                android:id="@+id/ed_tweet_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/send_comment"
                android:layout_marginStart="5dp"
                />

            <ImageButton
                android:id="@+id/btn_send_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_send_black_20"
                android:background="@android:color/transparent"
                android:layout_marginBottom="10dp"
                app:layout_anchor="@id/ed_tweet_comment"
                app:layout_anchorGravity="right|bottom"
                />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>